---
import { Font } from "astro:assets";
import "~/styles/globals.css";

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<!doctype html>
<html lang="en-US">
  <head>
    <meta charset="utf-8" />
    {/* Google Fonts (self-hosted) */}
    <Font cssVariable="--font-inter" preload={true} />
    <Font cssVariable="--font-space-grotesk" preload={true} />
    {/* Favicons */}
    <link
      rel="icon"
      href="/assets/images/favicon-light.png"
      media="(prefers-color-scheme: light)"
      type="image/png"
      sizes="32x32"
    />
    <link
      rel="icon"
      href="/assets/images/favicon-dark.png"
      media="(prefers-color-scheme: dark)"
      type="image/png"
      sizes="32x32"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body
    class:list={[
      "bg-neutral-950 font-sans text-base text-neutral-100",
      "selection:bg-neutral-200 selection:text-neutral-900",
    ]}
  >
    {/* This wrapper prevents a body overflow in mobile browsers. */}
    <div class="flex min-h-screen flex-col">
      <main class="grid flex-1 items-center">
        <slot />
      </main>
    </div>
  </body>
</html>
